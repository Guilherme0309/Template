Var
// Seção de Declarações das variáveis 

nota1: real
nota2: real
nota3: real
resultado: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 

Escreval ("Vamos calcular a sua média: ")

Escreval ("Escreva sua primeira nota:")
leia (nota1)

     Se (nota1 > 10)entao
     Escreval ("Sua nota deve ser de 0 a 10:")
     leia (nota1)
     fimse
     
Escreval ("Escreva sua segunda nota:")
leia (nota2)

     Se (nota2 > 10)  entao
     Escreval ("Sua nota deve ser de 0 a 10:")
     leia (nota2)
     fimse
     
Escreval ("Escreva sua nota de trabalho:")
leia (nota3)

     Se (nota3 > 10) entao
     Escreval ("Sua nota deve ser de 0 a 10:")
     leia (nota3)
     fimse
     
resultado <- (nota1 + nota2 + nota3)/3

Escreva ("Sua média é: ", resultado, " você esta ")

     Se (resultado > 6) entao
     escreval ("aprovado")
     Senao
          escreval("reprovado")
     fimse
Fimalgoritmo
