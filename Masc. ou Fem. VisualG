Var

nome: caractere
idade: inteiro
x: inteiro
total: inteiro
gnr: inteiro
Masc: inteiro
Fem: inteiro


Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
Para x de 1 ate 6 faca

     //nome
     Escreval ("Qual seu nome?")
     Leia (nome)
     Escreval(" ")
     
     //Idade
     Escreval ("Qual sua idade?")
     Leia (idade)
     Escreval(" ")
     total <- total + idade
     
     //Genero
     Escreval ("Qual seu Genêro?")
     Escreval ("1: Masculino.")
     Escreval ("2: Feminino")
     Leia (gnr)
     
     //masculino
     Se (gnr < 2) entao
     Masc <- Masc + idade
     
     //Resultado
     Escreval(" ")
     Escreval(x, "°) Nome: ", nome)
     Escreval(" Idade: ", idade, " anos")
     Escreval("Genêro: Masculino")
     Escreval(" ")
     Senao

          //feminino
          Se (gnr < 3) entao
          Fem <- Fem + idade
          
          //Resultado
          Escreval(" ")
          Escreval(x, "°) Nome: ", nome)
          Escreval(" Idade: ", idade, " anos")
          Escreval("Genêro: Masculino")
          Escreval(" ")
          
          //TENTE NOVAMENTE
          Senao  //Se gnr for diferente de 1 ou 2
          Escreval ("Resposta incorreta. Tente Novamente.")
          Leia (gnr)
          fimse
     fimse


Fimpara

//soma
Escreval ("A soma das idades dos homens é de ", Masc)
Escreval ("A soma das idades das mulheres é de ", Fem)

Fimalgoritmo
