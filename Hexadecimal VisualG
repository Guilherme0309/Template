Algoritmo "semnome"
// Disciplina   : [Linguagem e Lógica de Programação]

Var
// Seção de Declarações das variáveis
decimal: inteiro

cociente: inteiro
cociente2: inteiro
resto1: inteiro
resto2: inteiro

Inicio

Escreval ("Escreva um número decimal para tranformá-lo em Hexadecimal:")
Leia (decimal)

Se (decimal > 999) entao
Escreval ("Digite apenas até 999")
Leia (decimal)
Fimse

Escreval (" ")
Escreval ("Seu resultado em forma Hexadecimal é:")

//Contas

cociente <- decimal div 16
resto1 <- decimal mod 16

//Se precisar dividir novamente:

Se (cociente > 15) entao

  resto2  <- cociente mod 16
  cociente2 <- cociente div 16
Fimse

//Tradução para letras

//cociente
Se (cociente < 1) entao
 escreva (" ")
 Senao
Se (cociente < 10)  entao
 escreva (cociente)
Fimse
fimse

Se (cociente = 10)  entao
 escreva ("A")
Fimse

Se (cociente = 11)  entao
  escreva ("B")
Fimse

Se (cociente = 12) entao
  escreva ("C")
Fimse

Se (cociente = 13)  entao
  escreva ("D")
Fimse

Se (cociente = 14) entao
  escreva ("E")
Fimse

Se (cociente = 15) entao
  escreva ("F")
Fimse

